block vars 
  - var title='base.pug'
  - var description="base.pug description";
  - var image='https://via.placeholder.com/1200x630.png'
  - var stylesheet='/base.css'
  - var script='/base.js'

doctype html
html 
  head
    block head
      title #{title}
      meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=0")
