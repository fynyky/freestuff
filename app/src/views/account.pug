extends base.pug

block append vars
  - var stylesheet='/account.css'
  - var script='/account.js'

block main
  .container
    
    h1.title Account information

    h2.title User ID
    p.block= user.id

    h2.title Account Type
    p.block= user.charity ? 'Public charity' : 'Public citizen'

    h2.title Account creation date
    p.block= user.createdAt.toDateString()

    form(action="logout" method="POST")
      .field
        .control
          button.button.is-light(type="submit") Logout
